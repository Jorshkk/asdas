<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="appTheme.edt" parent="AppTheme">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColorHint">@color/color_secondarytext</item>
        <item name="backgroundTint">@color/greenHint</item>
    </style>

    <style name="appTheme.btnLogin" parent="AppTheme">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/aqua</item>
    </style>

    <style name="appTheme.twCrearCuenta" parent="AppTheme">
        <item name="android:textColor">@color/greenHint</item>
        <item name="android:text">@string/app_creaCuenta_login</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="fontFamily">casual</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>